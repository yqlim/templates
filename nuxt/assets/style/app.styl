@require 'base'

*
  box-sizing: border-box
  -webkit-overflow-scrolling: touch

html
body
  width: 100%
  height: 100%
  font-size: 16px
  font-family: fontFamily
  color: colors.black
  padding: 0
  margin: 0

#__nuxt
#__layout
  width: 100%
  height: 100%

input
select
button
  appearance: none
  font-size: inherit
  font-family: inherit
  border: 1px solid #e6e6e6
  border-radius: 0.5rem
  outline: none
  defaultMargin()
